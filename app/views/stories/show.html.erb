<table>
  <tr><%=@story.votes%>   <%=@story.title%></tr>
  <tr>
  <table class="micropost" summary="comments listing">
    <% @current_comments.each do |comment| %>
          <tr><td> <%= button_to 'vote up', upvote_story_comment_path(comment), :method => :get %></td></tr>
      <tr>
        <td class="main">votes <%=comment.votes%>  <%=comment.comment_text%>
        <br> <font size="1">  Posted <%= time_ago_in_words(comment.created_at) %> ago
        by <%=comment.user_id%></font>
          <tr><td> <%= button_to 'down vote', downvote_story_comment_path(comment), :method => :get %></td></tr>
          <td>------------------------------------------------------------------------------------------------------------------------------</td>
          <br>
      </tr>
    <% end %>

  </table>
  <%= form_for ([@story, @story.comments.build]) do |f|  %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :comment %><br />
    <%= f.text_area :comment_text,  :rows => 3, :cols => 40,  :placeholder => 'Enter comment here...' %>
     </div>
  <div class="actions">
    
    <%= f.submit "Submit" %>
  </div>
<% end %>
</table>
