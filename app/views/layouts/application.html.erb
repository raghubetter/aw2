<!DOCTYPE html>
<html>
  <head>
    <%= init_tinymce_hammer_if_required %>
    <title><%= title %></title>
    <%= csrf_meta_tag %>
    <%= render 'layouts/stylesheets' %>
    <%= javascript_include_tag :defaults, 'tiny_mce/tiny_mce.js' %>
  </head>
  <body>
    <div class="container">
      <%= render 'layouts/header' %>
      <section class="round">
        <nav class="round" style="font-size:12px;font-weight:bold;">
          <ul>
            <li><%= link_to "Top Stories", root_path %></li>
            <% if signed_in? %>
              <% if false%>
                <li> <%= link_to "Profile", current_user %> </li>
                <li><%= link_to "Users", users_path %></li>
              <% end %>
              <li><%= link_to "Post Story", poststory_path %></li>
              <li><%= link_to "Retiree", retiree_path %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
            <% end %>
          </ul>
        </nav>
        <br/>
        <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>
        <%= yield %>
      </section>
      <%= render 'layouts/footer' %>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
