<%= form_for @story do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
  <%= f.label :title %><br />
  <%= f.text_field :title %>
  </div>
  <div class="field">
  <%= f.label :teaser %><br />
  <%= f.text_field :teaser %>
</div>
<div class="field">
  <%= f.label :url %><br />
  <%= f.text_field :url %>
</div>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>
